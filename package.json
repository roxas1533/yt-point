{
  "name": "yt-point",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "bunx --bun vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "bun run sidecar:build && fuser -k 1420/tcp 2>/dev/null; concurrently --kill-others --kill-others-on-fail --kill-signal SIGTERM \"vite\" \"tauri dev\"",
    "tauri:build": "bun run sidecar:build && tauri build",
    "sidecar:build": "cd sidecar && bun run build:linux",
    "sidecar:build:mac": "cd sidecar && bun run build:mac",
    "sidecar:build:win": "cd sidecar && bun run build:win",
    "lint": "biome check . && cargo clippy --manifest-path src-tauri/Cargo.toml",
    "lint:fix": "biome check --write .",
    "format": "biome format --write . && cargo fmt --manifest-path src-tauri/Cargo.toml",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "wdio run wdio.conf.js"
  },
  "dependencies": {
    "@radix-ui/react-switch": "^1.2.6",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "*",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@wdio/cli": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18",
    "wdio-image-comparison-service": "^5.0.3"
  }
}
